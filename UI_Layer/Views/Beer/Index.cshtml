@model List<UI_Layer.Models.BeerProductViewModel>;
@{
    ViewData["title"] = "Beers";
}

<h3>Beers List</h3>
<hr/>
@Html.ActionLink("New product", "SaveBeerProductsForm", "Beer", null,new { @class="btn btn-primary", @role="button"})
<hr/>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Size</th>
            <th>Container</th>
            <th>Container Name</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var beer in Model)
        {
            <tr>
                <td>@beer.BrandName</td>
                <td>@beer.Size</td>
                <td>@beer.ContainerType</td>
                <td>@beer.ContainerName</td>
                <td>@beer.Price.ToString("00.00")</td>
                <td>@Html.ActionLink("Edit", "SaveBeerProductsForm", "Beer", new { beerId = beer.Id.ToString() })</td>
            </tr>
        }
    </tbody>
</table>